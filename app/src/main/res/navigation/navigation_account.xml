<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/navigation_account"
            app:startDestination="@id/fragment_authenticating">

    <fragment
        android:id="@+id/fragment_authenticating"
        android:name="com.codepunk.core.ui.auth.AuthenticatingFragment"
        android:label="@string/account_label_authenticating"
        tools:layout="@layout/fragment_authenticating">

        <action
            android:id="@+id/action_authenticating_to_authentication_options"
            app:destination="@id/fragment_authentication_options"
            app:clearTask="true" />

        <action
            android:id="@+id/action_authenticating_to_log_in"
            app:destination="@id/fragment_log_in"
            app:clearTask="true" />

        <action
            android:id="@+id/action_authenticating_to_create_account"
            app:destination="@id/fragment_create_account"
            app:clearTask="true" />

    </fragment>


    <fragment
        android:id="@+id/fragment_authentication_options"
        android:name="com.codepunk.core.ui.auth.AuthenticationOptionsFragment"
        android:label="@string/account_label_authentication_options"
        tools:layout="@layout/fragment_authentication_options">

        <action
            android:id="@+id/action_authentication_options_to_create_account"
            app:destination="@id/fragment_create_account" />

        <action
            android:id="@+id/action_authentication_options_to_log_in"
            app:destination="@id/fragment_log_in" />

    </fragment>

    <fragment
        android:id="@+id/fragment_create_account"
        android:name="com.codepunk.core.ui.auth.CreateAccountFragment"
        android:label="@string/account_label_create_account"
        tools:layout="@layout/fragment_create_account">

        <action
            android:id="@+id/action_create_account_to_log_in"
            app:destination="@id/fragment_log_in" />

    </fragment>

    <fragment
        android:id="@+id/fragment_forgot_password"
        android:name="com.codepunk.core.ui.auth.ForgotPasswordFragment"
        android:label="@string/account_label_forgot_password"
        tools:layout="@layout/fragment_forgot_password" />

    <fragment
        android:id="@+id/fragment_log_in"
        android:name="com.codepunk.core.ui.auth.LogInFragment"
        android:label="@string/account_label_log_in"
        tools:layout="@layout/fragment_log_in">

        <action
            android:id="@+id/action_log_in_to_create_account"
            app:destination="@id/fragment_create_account" />

        <action
            android:id="@+id/action_log_in_to_forgot_password"
            app:destination="@id/fragment_forgot_password" />

    </fragment>

</navigation>
